@model eventsSharing.User


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
        }

            table th {
                background-color: #F7F7F7;
                color: #333;
                font-weight: bold;
            }

            table th, table td {
                padding: 5px;
                border: 1px solid #ccc;
            }

        .error {
            color: red;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="3">
                Registration
            </th>
        </tr>
        <tr>
            <td>
                Username
            </td>
            <td>
                @Html.TextBoxFor(m => m.name)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.name, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td>
                Phone
            </td>
            <td>
                @Html.TextBoxFor(m => m.phone)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.phone, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td>
                Role
            </td>
            <td>
           sq     @Html.DropDownList("role", null, htmlAttributes: new { @class = "form-control" })
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.role, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                @Html.PasswordFor(m => m.password)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.password, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>
                @Html.TextBoxFor(m => m.email)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Submit" />
            </td>
            <td></td>
        </tr>
    </table>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
